defmodule DayTwo do
  def part_two(puzzle_input) do
    Counter.start_link(0)
    ranges = 
      puzzle_input
      |> Enum.at(0)
      |> String.split(",")
      |> Enum.map(&get_range(&1))
    Enum.each(ranges, &range_checker_part_two(&1))
    IO.inspect(Counter.value(), label: :final_count)
    Counter.stop()
  end

  def range_checker_part_two(range) do
    Enum.each(range, &id_checker_part_two(&1))
  end

  def id_checker_part_two(id) do
    id_length = get_id_length(id)
    id = Integer.to_string(id)
    possible_chunk_sizes = get_possible_chunk_sizes(id_length)

    result = Enum.map(possible_chunk_sizes, fn possible_chunk_size -> 
      chunk = String.slice(id, 0..possible_chunk_size-1)
      repeat_number = floor(id_length / possible_chunk_size)
      id == String.duplicate(chunk, repeat_number)
    end)
    if Enum.any?(result) and id_length > 1 do
      IO.inspect(:the_result_is_false)
      id = String.to_integer(id)
      Counter.increase_by_value(id)
    end
    IO.inspect(id_length)
    IO.inspect(id, label: :id)
    IO.inspect(possible_chunk_sizes, label: :possible_chunk_size)
  end

  def get_possible_chunk_sizes(1) do
    [1]
  end

  def get_possible_chunk_sizes(id_length) do
    Range.new(1, id_length-1)
    |> Enum.filter(fn x -> 
        rem(id_length, x) == 0
      end)
  end


  def get_range(range) do
    IO.inspect(range)
     [start_digit, end_digit] = String.split(range, "-")
      Range.new(String.to_integer(start_digit), String.to_integer(end_digit))
  end

  def in_range?(id, range) do
    Enum.any?(range, fn id_from_range -> id == id_from_range end)
  end

  def get_id_length(id) do
    id
    |> Integer.digits()
    |> length()
  end
  
  # -- PART ONE LOGIC --

  def part_one(puzzle_input) do
    Counter.start_link(0)
    # invalid ID is made upp of any ID which is made *only* of some seuqnce of digits repeated twice
    # we only care about numbers with an even length
    # split them in half, and compare? is it that simple? no way
    ranges = 
      puzzle_input
      |> Enum.at(0)
      |> String.split(",")
      |> Enum.map(&get_range(&1))
    Enum.each(ranges, &range_checker(&1))
    IO.inspect(Counter.value(), label: :final_count)
    Counter.stop()
  end

  def range_checker(range) do
    Enum.each(range, &id_checker(&1))
  end

  def id_checker(id) do
    # if ID length is odd, all good
    # with 
    with true <- id_even?(id),
      true <- first_half_same_as_second?(id) do
      Counter.increase_by_value(id)
    else
      _ -> 
        false
    end
  end

  def first_half_same_as_second?(id) do
    length = get_id_length(id)
    midway = trunc(length / 2)
    {first_half, second_half} = 
    id
    |> Integer.to_string()
    |> String.split_at(midway)

    first_half == second_half
  end

  def id_even?(id) do
    length = get_id_length(id)
    if Integer.mod(length, 2) == 0, do: true, else: false
    
  end
end
